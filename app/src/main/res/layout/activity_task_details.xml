<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskDetails">

    <LinearLayout
        android:layout_margin="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/fflogo"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

        <TextView
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#333"
            android:textSize="20dp"
            android:gravity="left"
            android:text="  Rider's Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="#333"
    android:layout_width="match_parent"
    android:layout_height="1dp"/>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="18dp"
        android:text="Address :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/a"
        android:textSize="18dp"
        android:paddingLeft="5dp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="Johar Town, 408 q block model town"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>


<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="18dp"
        android:text="Order :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/b"
        android:textSize="18dp"
        android:paddingLeft="5dp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="2019-12-30 15:23:10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="18dp"
        android:text="orderStatus :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/c"
        android:textSize="18dp"
        android:paddingLeft="5dp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="Active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
<LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="18dp"
        android:text="taskAssignTime :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/d"
        android:textSize="18dp"
        android:paddingLeft="5dp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="2020-01-17 13:28:55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>


<LinearLayout
    android:visibility="gone"
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="18dp"
        android:text="taskStatus :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/e"
        android:textSize="18dp"
        android:paddingLeft="5dp"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_weight="1"
        android:text="Active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>

<LinearLayout
    android:visibility="gone"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView

        android:textStyle="bold"
        android:textSize="18dp"
        android:text="instruction From Admin :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/f"
        android:textSize="18dp"
        android:paddingLeft="5dp"
        android:textColor="#333"
        android:layout_weight="1"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
<TextView
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
<Button
    android:id="@+id/w"
    android:onClick="ch"
    android:layout_margin="20dp"
    android:textColor="#fff"
    android:text="ready"
    android:background="@drawable/add_btn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</LinearLayout>